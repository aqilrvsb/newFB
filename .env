# Server Configuration
PORT=3000
NODE_ENV=production
MAX_CONNECTIONS=200
SESSION_TIMEOUT=3600000
RATE_LIMIT_MAX=100

# CORS Configuration (comma-separated origins, or * for all)
CORS_ORIGINS=*

# Optional: Security headers and features
HELMET_ENABLED=true

# Optional: Compression
COMPRESSION_ENABLED=true

# Note: Facebook credentials are provided dynamically by users
# The following environment variables are NOT needed in this version:
# FACEBOOK_APP_ID (dynamic per user)
# FACEBOOK_APP_SECRET (dynamic per user) 
# FACEBOOK_ACCESS_TOKEN (dynamic per user)
# FACEBOOK_ACCOUNT_ID (dynamic per user)